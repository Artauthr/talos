<root>
    <menu name="file" title="File">
        <menu name="new" title="New">
            <menu name="project" title="Project" />
            <menu name="routine" title="Routine" />
            <menu name="vfx" title="VFX" />
            <menu name="shader" title="Shader" />
        </menu>
        <menu name="open" title="Open"/>
        <menu name="open_recent" title="Open Recent">
            <inject name="open_recent" />
        </menu>
        <separator/>
        <menu name="save" title="Save"/>
        <menu name="save_as" title="Save As..."/>
        <menu name="save_copy" title="Save Copy"/>
        <separator/>
        <menu name="import" title="Import">
            <inject name="other" />
        </menu>
        <menu name="export" title="Export">
            <menu name="project" title="Project Export" />
            <inject name="other" />
        </menu>
        <separator/>
        <menu name="quit" title="Quit"/>
    </menu>
    <menu name="edit" title="Edit">
        <menu name="undo" title="Undo"/>
        <menu name="redo" title="Redo"/>
        <separator/>
        <menu name="preferences" title="Preferences"/>
    </menu>
    <menu name="window" title="Window">
        <menu name="panels" title="Panels">
            <menu name="close_all" title="Close all floating panels"/>
            <separator/>
            <inject name="panel_list"/>
        </menu>
        <separator/>
        <menu name="layouts" title="Layouts">
            <inject name="list"/>
        </menu>
        <separator/>
        <menu name="apps" title="Apps">
            <inject name="list"/>
        </menu>
    </menu>
    <menu name="help" title="Help">
        <menu name="about" title="About Talos"/>
        <menu name="docs" title="Online Documentation"/>
        <menu name="updates" title="Check for Updates"/>
    </menu>
</root>